<div class="container">
	<div class="row">
		<!-- カートのテーブル部分 -->
		<div class="col-md-9">
			<h1>カート</h1>
			<table class="table">

				<!-- テーブルのサイズ設定 -->
				<colgroup span="1" width="20%"></colgroup> <!-- 画像のカラム -->
				<colgroup span="1" width="20%"></colgroup> <!-- 削除ボタンのカラム -->
				<colgroup span="1" width="20%"></colgroup> <!-- 商品名のカラム -->
				<colgroup span="1" width="20%"></colgroup> <!-- 価格のカラム -->
				<colgroup span="1" width="20%"></colgroup> <!-- 数量のカラム -->

				<thead>
					<tr>
						<th></th>
						<th></th>
						<th></th>
						<th>価格</th>
						<th>数量</th>
					</tr>	
				</thead>

				<tbody>
					<% @carts.each do |cart| %>
						<tr>
							
							<td><%= attachment_image_tag cart.good, :jacket_image, format: "jpeg", fallback: "no_image.jpg", size: "100x100" %></td>
							<td>
							</td>
							<td><%= cart.good.goods_title %></td>
							<td><%= cart.good.price %>円</td>
							<td>
								<%= cart.cart_value %>
							</td>
							
						</tr>
					<% end %>
				</tbody>
			</table>
		</div>

		<!-- カートの合計金額、購入ボタン部分 -->
		<div class="col-md-3">
			<br>
			<br>
			<div class="card">
				<div class="card-body text-left">
					<h4>総計価格</h4>
				</div>
				<div class="card-body">
					<p class="text-left">合計価格:</p>
					<p class="text-right">¥<%= @price %>円</p>
					<p class="text-left">送料:</p>
					<p class="text-right">¥<%= @delivery_price %>円</p>
					<p class="text-left">消費税:</p>
					<p class="text-right">¥<%= @tax.to_i %>円</p>
					<hr>
					<p class="text-left">総計:</p>
					<p class="text-right">¥<%= @total_price.to_i %>円</p>
					<%= link_to "購入", home_finish_path, class: "btn btn-success btn-lg btn-block" %>
				</div>
			</div>
		</div>
	</div>
	<br>

	<!-- 住所表示部分 -->
	<div class="card">
		<div class="card-body">
			<h3 class="text-left">配送先</h3>
			<p class="text-left">〒<%= @post_code.chars[0] + @post_code.chars[1] + @post_code.chars[2] + "-" + @post_code.chars[3] + @post_code.chars[4] + @post_code.chars[5] + @post_code.chars[6] %></p>
			<p class="text-center"><%= @address %></p>
			
		</div>
	</div>
	<br>
	<div class="d-flex justify-content-end">
		<%= link_to "購入キャンセル", order_path(@orders.id), method: :delete, class:"btn btn-warning",data: {confirm:"カートの中身を消します。本当にいいの？"} %>
		<!-- ボタンとボタンのマージン用。消さないで -->
		<a>　</a>
		<%= link_to "前の画面に戻る", orders_path, class: "btn btn-info btn-sm" %>
	</div>
</div>