<%= flash[:notice] %>
<div class="container">
  <div class="row">
    <%= form_for @good, url: search_path do |f| %>
    <%= f.text_field :goods_title %>
  	<!-- <form class="col-lg-2">
      <div class="form-group">
        <label class="control-label">商品名</label>
      </div>
  	  <button type="button" class="btn btn-default">検索</button>
    </form> -->
    <%= f.submit "検索" %>
    <% end %>
  </div>
  <% @goods.each do |good| %>
  <div class="col-lg-3" style= "height: 250px; border:solid 1px; margin-top:30px;">
  	<p style="line-height:250px; float: left; padding: 0 30px 0 0"><a href="<%= "/goods/#{good.id}" %>"><%= attachment_image_tag good, :jacket_image, format: "jpeg", fallback: "no_image.jpg", size: "60x60" %></a></p>
  	<p style="padding: 30px; line-height:46px;">
  		<%= good.goods_title %><br>
  		<%= good.artist %><br>
  		<%= good.price %>円<br>
      <!-- 後で追加必要あり -->
  		在庫あり<br>
    </p>
  </div>
  <% end %>
</div>
