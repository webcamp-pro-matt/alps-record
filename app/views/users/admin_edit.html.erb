<h1>編集</h1>
<%= form_for(@user) do |f| %>
    <h4>名前（性）</h4>
    <%= f.text_field :name_kanji_sei %>

    <h4>名前（名）</h4>
    <%= f.text_area :name_kanji_mei %>

    <h4>名前（カナ性）</h4>
    <%= f.text_field :name_kana_sei %>

    <h4>名前（カナ名）</h4>
    <%= f.text_area :name_kana_mei %>

    <h4>郵便番号</h4>
    <%= f.text_field :post_code %>

    <h4>住所</h4>
    <%= f.text_area :address %>

    <h4>電話番号</h4>
    <%= f.text_field :phone_number %>

    <h4>メールアドレス</h4>
    <%= f.text_area :mail_address %>

    <%= f.submit '更新' %>
<% end %>