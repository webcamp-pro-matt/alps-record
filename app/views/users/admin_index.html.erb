<div class="title">
	<h1>ユーザー一覧</h1>
</div>

<div class="container">
	<div class="row">
		<div class="col-md-12">
			<table class="table">
			<thead>
				<colgroup span="1" style="width:5%;">
				<colgroup span="2" style="width:10%;">
				<colgroup span="1" style="width:20%;">
				<colgroup span="1" style="width:7%;">

			<div class="row">
					<th>ID</th>
					<th>名前</th>
					<th>郵便番号</th>
					<th>住所</th>
					<th>e-mail</th>
				</div>
				
			</thead>
			
			<% @users.each do |user|%>
				<tbody>
					<%# @child = Userschild.find(user.id) %>
					<td><%= user.id %></td>
					<td><%#= user.name_kanji_sei %><%#= user.name_kanji_mei %></td>
					<td>〒<%= user.users_child.post_code %></td>
					<td><%= user.address %></td>
					<td><%= user.mail_address %></td>
				</tbody>
			<% end %>

			</table>
		</div>
		
		  <button type="button" class="btn btn-primary mx-auto">
 			<%#<%= link_to "戻る", %>戻る
 		  </button>
 		
	</div>
</div>
 